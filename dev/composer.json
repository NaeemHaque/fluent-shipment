{
    "name": "wpfluent/framework-devtools",
    "version": "2.0.0",
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "yoast/phpunit-polyfills": "^2.0",

        "fakerphp/faker": "^1.21",

        "nikic/php-parser": "^5.0",
        "symfony/console": "^4.0|^5.0",

        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.2",

        "phpcompatibility/php-compatibility": "^9.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",

        "phpstan/phpstan": "^1.11",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "php-stubs/wordpress-stubs": "^5.0"
    },

    "autoload": {
        "psr-4": {},
        "classmap": [
            "cli",
            "factories",
            "seeders",
            "test"
        ]
    },

    "authors": [
        {
            "name": "Sheikh Heera",
            "email": "heera.sheikh77@gmail.com"
        }
    ],

    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },

    "scripts": {
        "phpcs": "vendor/bin/phpcs -p -s --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf -p --standard=phpcs.xml",
        "phpstan": "php -dxdebug.mode=off vendor/bin/phpstan analyse ../app --debug --configuration=./phpstan/config.neon --memory-limit=2G --autoload-file=./phpstan/phpstan-bootstrap.php",
        "check": [
            "@phpcbf",
            "@phpcs",
            "@phpstan"
        ]
    }
}
